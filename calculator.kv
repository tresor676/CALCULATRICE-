<Calculator>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    TextInput:
        id: display
        font_size: 32
        size_hint_y: 0.2
        multiline: False
        readonly: True
        background_color: (0, 0, 0, 1)
        foreground_color: (1, 1, 1, 1)
        text: ""

    GridLayout:
        cols: 4
        spacing: 10
        size_hint_y: 0.8

        Button:
            text: "7"
            on_press: root.add_text("7")
        Button:
            text: "8"
            on_press: root.add_text("8")
        Button:
            text: "9"
            on_press: root.add_text("9")
        Button:
            text: "‚Üê"
            on_press: root.backspace()

        Button:
            text: "4"
            on_press: root.add_text("4")
        Button:
            text: "5"
            on_press: root.add_text("5")
        Button:
            text: "6"
            on_press: root.add_text("6")
        Button:
            text: "+"
            on_press: root.add_text("+")

        Button:
            text: "1"
            on_press: root.add_text("1")
        Button:
            text: "2"
            on_press: root.add_text("2")
        Button:
            text: "3"
            on_press: root.add_text("3")
        Button:
            text: "-"
            on_press: root.add_text("-")

        Button:
            text: "C"
            on_press: root.clear_display()
        Button:
            text: "0"
            on_press: root.add_text("0")
        Button:
            text: "="
            on_press: root.calculate_result()
        Button:
            text: "*"
            on_press: root.add_text("*")

        Button:
            text: "/"
            on_press: root.add_text("/")
        Button:
            text: "."
            on_press: root.add_text(".")
        Widget:
        Widget:
